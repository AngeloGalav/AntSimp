#:kivy 1.0
#:import random random.random

# grid cell parameters
<GridCell>:
    canvas:
        Color:
            rgba: 1, 1, 1, 0.2
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: self.color
        Rectangle:
            size: self.width-2, self.height-2
            pos: self.x+1, self.y+1


# "building uis using kivy is a nightmare: a visual approach"
<Body>
    canvas.before:
        Color:
            rgba: 0,0,0,1
        Rectangle:
            pos: self.pos
            size: self.size

<Viewport>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.2
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15]
        Color:
            rgba: (0, 0, 0, 1)
        RoundedRectangle:
            size: self.width-8, self.height-8
            pos: self.x+4, self.y+4


<Footer>
    canvas.before:
        Color:
            rgba: 0, 0, 1, 1
    BoxLayout:
        padding: 20
        spacing: 10
        Button:
            text: 'Start simulation'
        Button:
            text: 'Stop'

<RootWidget>
    orientation: 'vertical'
    Body:
        size_hint: 1, .80
        pos_hint: {'center_x':.5, 'center_y': .5}
        Viewport:
            size_hint: .9, .9
            pos_hint: {'center_x':.5, 'center_y': .5}
            GridLayout:
                id: grid
                rows: 28
                cols: 28
                size_hint: None, None
                # Use the smallest of width/height to make a square grid.
                # The "if not self.parent" condition handles parent=None
                # during initial construction, it will crash otherwise
                width: 100 if not self.parent else min(*self.parent.size) - 10
                height: self.width
                pos_hint: {'center_x':.5, 'center_y': .5}
    Footer:
        size_hint: 1, .20
        pos_hint: {'center_x':.5, 'center_y': .5}